<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projectabz.dampil.watershed.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        android:id="@+id/button"
        android:onClick="onClickButton"
        android:layout_above="@+id/buttonClear"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/layer"
        android:id="@+id/textView"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/K1"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/K2"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editLayer"
        android:inputType="number|numberDecimal"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView42"
        android:layout_toEndOf="@+id/textView42" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editK1"
        android:layout_above="@+id/textView3"
        android:inputType="number|numberDecimal"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editLayer"
        android:layout_alignStart="@+id/editLayer" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editK2"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/editK1"
        android:layout_alignStart="@+id/editK1"
        android:inputType="number|numberDecimal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/L"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editL"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/editK2"
        android:layout_alignStart="@+id/editK2"
        android:layout_alignRight="@+id/editK2"
        android:layout_alignEnd="@+id/editK2"
        android:inputType="number|numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/B"
        android:id="@+id/textView5"
        android:textSize="21sp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonDetail"
        android:id="@+id/buttonDetail"
        android:onClick="onClickDetail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:id="@+id/buttonClear"
        android:onClick="onClickButtonClear"
        android:layout_above="@+id/buttonDetail"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:src="@drawable/launchlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_above="@+id/editLayer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/view2"
        android:layout_alignBottom="@+id/view"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView37"
        android:layout_toRightOf="@+id/view2"
        android:layout_toEndOf="@+id/view2"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/view2"
        android:layout_alignBottom="@+id/view"
        android:gravity="left|bottom"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@id/textView7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculator"
        android:id="@+id/button3"
        android:onClick="onClickCalc"
        android:layout_below="@+id/buttonClear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView42"
        android:textSize="21sp"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/view2"
        android:layout_alignRight="@+id/view2"
        android:layout_alignBottom="@+id/view"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@id/textView6"
        android:gravity="bottom|right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/M"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_above="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/M"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:gravity="right"
        android:textStyle="bold"
        android:layout_above="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"/>

</RelativeLayout>
